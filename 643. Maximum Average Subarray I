class Solution {
public:
    double findMaxAverage(vector<int>& nums, int k) {
        vector<double> av;
        int window = k-1 ;
        int l =0;
        double temp =0;  
        while(l<=window) {
            temp+=nums[l];
            l++;
        }      
        av.push_back(temp/k);
        l=0;
        for(int j=window+1;j<nums.size();j++) {  
                 temp-=nums[l];    
                 temp+=nums[j];
                 av.push_back(temp/k);
                 l++;
            }
	double mx = *max_element(av.begin(), av.end());
    return mx;
    }
};
